#pragma mark -  添加字帖的文字
- (void)editionAddViewControllerfinishWithTxt:(NSString *)txt isloop:(BOOL)loop{
    if (loop) {// 循环的话
        NSMutableString *mutableStr = [NSMutableString stringWithString:txt];
        while (mutableStr.length < 20) {
             [mutableStr appendString:txt];
        }
        txt = [mutableStr copy];
    }
    self.text = txt;
}

